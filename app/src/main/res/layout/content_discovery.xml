<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:background="@color/activity_heading">

        <TextView
            android:id="@+id/wifi_name"
            android:text="@string/dis_SSID_header"
            style="@style/DashboardHeader"
            android:layout_weight="4"
            android:paddingLeft="8dp"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/Tx_channel"
            android:text="@string/dis_freq_header"
            style="@style/DashboardHeader"
            android:layout_weight="4"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="@color/text_color"/>

        <TextView
            android:id="@+id/Tx_wifi_rssi"
            android:text="@string/dis_rssi_header"
            style="@style/DashboardHeader"
            android:layout_weight="4"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="@color/text_color"
            android:textAlignment="textEnd"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.7dp"
        android:layout_gravity="center"
        android:background="@color/discovery_line" />

    <ListView
        android:id="@+id/list_view_wifi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>